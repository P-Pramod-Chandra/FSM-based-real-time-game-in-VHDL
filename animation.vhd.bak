library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity animation is
	port(clk,sw:in std_logic_vector(7 downto 0);led:out std_logic_vector(7 downto 0));
end animation;

architecture blah of animation is
begin

led t:st<= (others => '0');


beh : process(sw,clk)
begin
while sw(4)='1' loop
	if rising_edge(sw(0)) or falling_edge(sw(0)) then
	while sw(4)='1' loop
		if rising_edge(clk) then
			led = std_logic_vector(unsigned(led) + 1);
		end if;
	end loop;
	
	if rising_edge(sw(7)) or falling_edge(sw(7)) then
	while sw(4)='1' loop
		if rising_edge(clk) then
			led = std_logic_vector(unsigned(led) - 1);
		end if;
	end if;
	end loop;
	
end loop;

end process;

end blah;